<!DOCTYPE html>
<html>
<head>
  <title>Movie Page!</title>
</head>

<body>
  <h1>List of movies in the database</h1>
  <ul>
    <% movies.forEach(function(movie) { %>
    <li>
      Name : <strong> <%= movie.name %> </strong> <br>
      Release Date: <strong> <%= movie.releaseDate %> </strong>
      <br><br>
      <form method="post" action="/movies/<%= movie._id %>?_method=DELETE">
        <button type="submit">Delete</button>
      </form>
      <form method="get" action="/movies/<%= movie._id %>/edit">
        <button type="submit">Update</button>
      </form>
    </li>
    <% }); %>
  </ul>
</body>
</html>

<style>
    body {
      padding: 50px;
      font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
      background: #666;
      color: #ccc;
    }
    a {
      color: #00B7FF;
    }
  </style>
